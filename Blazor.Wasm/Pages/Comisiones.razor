    }
     */


    private async Task LoadComisiones()
    {
        try
        {
            loading = true;
            comisiones = (await ComisionAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar comisiones: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await comisionModal.ShowAddModal();
    }

    private async Task OpenEditModal(ComisionDTO comision)
    {
        await comisionModal.ShowEditModal(comision);
    }

    private async Task ConfirmDelete(ComisionDTO comision)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el comision {comision.Id} {comision.Descripcion} {comision.AnioEspecialidad} {comision.DescripcionPlan}?");

        if (confirm)
        {
            await DeleteComision(comision.Id);
        }
    }

    private async Task DeleteComision(int id)
    {
        try
        {
            await ComisionAPIClient.DeleteAsync(id);
            successMessage = "Comision eliminado exitosamente.";
            await LoadComisiones();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar comision: {ex.Message}";
        }
    }




}
