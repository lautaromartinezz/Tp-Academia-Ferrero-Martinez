    private async Task LoadCursos()
    {
        try
        {
            loading = true;
            cursos = (await CursoAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar cursos: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await cursoModal.ShowAddModal();
    }

    private async Task OpenEditModal(CursoDTO curso)
    {
        await cursoModal.ShowEditModal(curso);
    }

    private async Task ConfirmDelete(CursoDTO curso)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el curso {curso.Id} {curso.AnioCalendario} {curso.DescripcionMateria}?");

        if (confirm)
        {
            await DeleteCurso(curso.Id);
        }
    }

    private async Task DeleteCurso(int id)
    {
        try
        {
            await CursoAPIClient.DeleteAsync(id);
            successMessage = "Curso eliminado exitosamente.";
            await LoadCursos();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar curso: {ex.Message}";
        }
    }




}
