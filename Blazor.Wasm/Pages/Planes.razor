    private async Task LoadPlanes()
    {
        try
        {
            loading = true;
            planes = (await PlanAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar planes: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await planModal.ShowAddModal();
    }

    private async Task OpenEditModal(PlanDTO plan)
    {
        await planModal.ShowEditModal(plan);
    }

    private async Task ConfirmDelete(PlanDTO plan)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el plan {plan.Id} {plan.Descripcion} {plan.IdEspecialidad}?");

        if (confirm)
        {
            await DeletePlan(plan.Id);
        }
    }

    private async Task DeletePlan(int id)
    {
        try
        {
            await PlanAPIClient.DeleteAsync(id);
            successMessage = "Plan eliminado exitosamente.";
            await LoadPlanes();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar plan: {ex.Message}";
        }
    }




}
