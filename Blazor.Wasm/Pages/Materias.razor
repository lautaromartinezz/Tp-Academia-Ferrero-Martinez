    }
     */


    private async Task LoadMaterias()
    {
        try
        {
            loading = true;
            materias = (await MateriaAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar materias: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await materiaModal.ShowAddModal();
    }

    private async Task OpenEditModal(MateriaDTO materia)
    {
        await materiaModal.ShowEditModal(materia);
    }

    private async Task ConfirmDelete(MateriaDTO materia)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el materia {materia.Descripcion} {materia.DescripcionPlan}?");

        if (confirm)
        {
            await DeleteMateria(materia.Id);
        }
    }

    private async Task DeleteMateria(int id)
    {
        try
        {
            await MateriaAPIClient.DeleteAsync(id);
            successMessage = "Materia eliminado exitosamente.";
            await LoadMaterias();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar materia: {ex.Message}";
        }
    }




}
