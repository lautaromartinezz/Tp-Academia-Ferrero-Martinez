            {
                Navigation.NavigateTo("/login");
                return;
            }


            await LoadDictados();
            StateHasChanged();
        }
        await base.OnAfterRenderAsync(firstRender);
    }
     */


    private async Task LoadDictados()
    {
        try
        {
            loading = true;
            dictados = (await DictadoAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar dictados: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await dictadoModal.ShowAddModal();
    }

    private async Task OpenEditModal(DictadoDTO dictado)
    {
        await dictadoModal.ShowEditModal(dictado);
    }

    private async Task ConfirmDelete(DictadoDTO dictado)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el dictado {dictado.Id} {dictado.ProfesorLegajo} {dictado.CursoAnio} {dictado.Cargo}?");

        if (confirm)
        {
            await DeleteDictado(dictado.Id);
        }
    }

    private async Task DeleteDictado(int id)
    {
        try
        {
            await DictadoAPIClient.DeleteAsync(id);
            successMessage = "Dictado eliminado exitosamente.";
            await LoadDictados();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar dictado: {ex.Message}";
        }
    }




}
