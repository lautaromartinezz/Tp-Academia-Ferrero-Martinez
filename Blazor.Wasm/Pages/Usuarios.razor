    private async Task LoadUsuarios()
    {
        try
        {
            loading = true;
            usuarios = (await UsuarioAPIClient.GetAllAsync())?.ToList();
            successMessage = string.Empty; // Clear success message when reloading
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar usuarios: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenAddModal()
    {
        await usuarioModal.ShowAddModal();
    }

    private async Task OpenEditModal(UsuarioDTO usuario)
    {
        await usuarioModal.ShowEditModal(usuario);
    }

    private async Task ConfirmDelete(UsuarioDTO usuario)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm",
            $"¿Está seguro que desea eliminar el usuario {usuario.Nombre} {usuario.Apellido} ({usuario.Email})?");

        if (confirm)
        {
            await DeleteCliente(usuario.Id);
        }
    }

    private async Task DeleteCliente(int id)
    {
        try
        {
            await UsuarioAPIClient.DeleteAsync(id);
            successMessage = "Cliente eliminado exitosamente.";
            await LoadUsuarios();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al eliminar usuario: {ex.Message}";
        }
    }




}
